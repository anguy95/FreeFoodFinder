<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comment_row_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/comment_icon"
        android:gravity="start"
        android:padding="5sp"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comment_row_conetent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/comment_row_title"
        android:layout_gravity="start"
        android:gravity="start"
        android:padding="5sp"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/comment_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/comment_row_title"
        android:layout_alignParentEnd="true"
        android:paddingEnd="0dp"
        android:paddingStart="5dp"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/comment_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp" />


</RelativeLayout>