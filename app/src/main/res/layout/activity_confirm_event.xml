<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="andrewnguy.com.freefoodfinder.ConfirmEventActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/buttonConfirmPost"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttonCancelPost"
        android:layout_alignTop="@+id/buttonConfirmPost"
        android:layout_toStartOf="@+id/buttonConfirmPost"
        android:layout_marginEnd="27dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/editEventDescription"
        android:layout_above="@+id/buttonCancelPost"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonConfirmPost"
        android:hint="@string/add_event_description"
        android:background="#FFF4DD"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/editLocationDescription"
        android:layout_marginBottom="15dp"
        android:hint="@string/add_location_description"
        android:background="#FFF4DD"
        android:layout_above="@+id/editEventDescription"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editEventDate"
        android:hint="@string/edit_event_date"
        android:textAlignment="center"
        android:background="#FFF4DD"
        android:layout_below="@+id/editEventTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editEventStartTime"
        android:hint="@string/edit_start_time"
        android:textAlignment="center"
        android:background="#FFF4DD"
        android:layout_above="@+id/editLocationDescription"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/editEventEndTime"
        android:hint="@string/edit_end_time"
        android:textAlignment="center"
        android:background="#FFF4DD"
        android:layout_above="@+id/editLocationDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/editEventTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editLocationDescription"
        android:layout_alignParentEnd="true"
        android:hint="@string/add_event_title"
        android:textAlignment="center"
        android:background="#FFF4DD"/>

</RelativeLayout>