<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="100dp"
    android:layout_width="match_parent">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/event_title_row"
        android:textColor="#000"
        android:padding="5sp"
        android:singleLine="true"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:id="@+id/event_distance_row"
        android:textColor="#000"
        android:padding="5sp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_alignBottom="@+id/event_title_row"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/event_title_row" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="left"
        android:id="@+id/event_description_row"
        android:textColor="#000"
        android:padding="5sp"
        android:singleLine="true"
        android:gravity="left"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/event_title_row"
        android:layout_alignEnd="@+id/event_distance_row" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thu, Oct 69 2015"
        android:id="@+id/event_date_row"
        android:textColor="#000000"
        android:layout_below="@+id/event_title_row"
        android:layout_alignStart="@+id/event_title_row"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:30pm-5pm"
        android:id="@+id/event_time_row"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/event_date_row"
        android:layout_marginLeft="20dp"
        android:textColor="#000000" />


</RelativeLayout>