<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:textSize="15dp"
        android:id="@+id/event_title_row"
        android:textColor="#000"
        android:padding="5sp"
        android:layout_width="200dp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_height="20dp"
        android:background="#c8c8c8c8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:textSize="10dp"
        android:id="@+id/event_distance_row"
        android:textColor="#000"
        android:padding="5sp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:gravity="center"
        android:layout_height="15dp"
        android:background="#c8c8c8c8"
        android:layout_alignBottom="@+id/event_title_row"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:textSize="10dp"
        android:id="@+id/event_description_row"
        android:textColor="#000"
        android:padding="5sp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:gravity="center"
        android:layout_height="15dp"
        android:background="#c8c8c8c8"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/event_title_row"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@+id/event_distance_row" />



</RelativeLayout>