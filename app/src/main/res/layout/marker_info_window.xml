<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/markerBubble">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:id="@+id/small_event_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu, Oct. 29 2015"
            android:id="@+id/small_event_date"
            android:textSize="12dp"
            android:layout_below="@+id/small_event_title"
            android:layout_alignStart="@+id/small_event_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:30pm-5pm"
            android:id="@+id/small_event_time"
            android:textSize="12dp"
            android:layout_alignTop="@+id/small_event_date"
            android:layout_toEndOf="@+id/small_event_date"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food:"
            android:id="@+id/small_event_food_label"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_below="@+id/small_event_date"
            android:layout_alignStart="@+id/small_event_date"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Chinese, Vietnamese, Mexican, Burritos, Fries, Pizza, Soda, Milk"
            android:id="@+id/small_event_foodList"
            android:textSize="12dp"
            android:layout_alignTop="@+id/small_event_food_label"
            android:layout_toEndOf="@+id/small_event_food_label"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>
</LinearLayout>