<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EventViewActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <TextView
        android:id="@+id/event_title"
        android:layout_width="257dp"
        android:layout_height="30dp"
        android:layout_weight="0.07"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Title of Event"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#8D8D8D"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/event_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/view" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/tag_view"
        android:layout_below="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:fillViewport="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/tag_view"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Description"
        android:id="@+id/location_description_title"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#8D8D8D"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In York Hall level 2 in room 2000"
        android:id="@+id/location_description"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/location_description_title"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/location_description"
        android:layout_alignParentStart="true"
        android:id="@+id/view3"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description"
        android:id="@+id/event_description_title"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#8D8D8D" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, cum hinc adhuc impetus cu. Te quo putent volumus, eos primis omnium numquam et. Eum justo aeterno neglegentur cu. Ex hinc ponderum ius, duo ad minimum molestiae, cu justo praesent duo. Omnis graece aliquando ut ius, id mel causae principes, ancillae tincidunt voluptatibus his ei. Mel dicit expetenda inciderint at.  Ea munere iisque has. Ea pri altera saperet, at dicant oporteat sed. Quem justo ex has. Soluta putant vim an. Timeam molestie postulant ex vim, ut eam nostrum appellantur, usu id atqui novum detraxit."
        android:id="@+id/event_description"
        android:layout_below="@+id/event_description_title"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/event_description"
        android:layout_alignParentStart="true"
        android:id="@+id/view4"
        android:layout_marginTop="20dp" />


</RelativeLayout>
</ScrollView>