<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EventViewActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:weightSum="1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/event_title"
        android:layout_width="257dp"
        android:layout_height="30dp"
        android:layout_weight="0.07"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Title of Event"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#8D8D8D"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/event_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/view" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/tag_view"
        android:layout_below="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"
        android:fillViewport="false" >





    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/tag_view"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Description"
        android:id="@+id/location_description_title"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#8D8D8D"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In York Hall level 2 in room 2000"
        android:id="@+id/location_description"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/location_description_title"
        android:textColor="#000000"
        android:background="@drawable/event_activity_text_bg"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/location_description"
        android:layout_alignParentStart="true"
        android:id="@+id/view3"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description"
        android:id="@+id/event_description_title"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#8D8D8D" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_description"
        android:textColor="#000000"
        android:background="@drawable/event_activity_text_bg"
        android:textAlignment="center"
        android:layout_below="@+id/event_description_title"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/event_description"
        android:layout_alignParentStart="true"
        android:id="@+id/view4"
        android:layout_marginTop="20dp" />


</RelativeLayout>
</ScrollView>